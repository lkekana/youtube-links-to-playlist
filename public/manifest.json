{
  "manifest_version": 3,

  "name": "YouTube Playlist Maker",
  "description": "Create YouTube playlists using a list of video URLs",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
        "js": ["js/vendor.js", "js/content_script.js", "js/youtube.js"],
        "matches": [
            "https://*.youtube.com/*",
            "https://www.youtube-nocookie.com/embed/*"
        ],
        "exclude_matches": [
          "https://accounts.youtube.com/RotateCookiesPage*"
      ],
        "all_frames": true,
        "run_at": "document_start"
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["activeTab", "cookies", "storage"],

  "host_permissions": [
    "<all_urls>"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
